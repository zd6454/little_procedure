<!-- 轮播图 -->
<view class="detail_swiper">
    <swiper 
    autoplay="{{true}}"
    circular="{{true}}"
    indicator-dots="{{true}}"
    interval='2000'
    >
        <swiper-item 
        wx:for="{{item.playimagescloud}}"
        wx:for-item="item2"
        wx:key="index"
        bindtap="handlePreviewImage"
        style="height:1000rpx;"
       >
            <image mode="scaleToFill" style="height:700rpx;width:100%"  src="{{item2}}" bindtap="handlePreviewImage"  data-url="{{item2}}"/>
        </swiper-item>    
        <swiper-item>
          <image mode="scaleToFill" style="height:700rpx;width:100%"  src="{{item.imageurl}}" bindtap="handlePreviewImage"  data-url="{{item.imageurl}}"/>
