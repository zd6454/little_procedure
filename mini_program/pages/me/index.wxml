<view class='brand4' wx:if="{{menuIndex == 3}}">
  <block wx:for="{{list}}" wx:for-item="item" wx:key="{{item.id}}">
  <view class="kind-list-item">
    <view id="{{item.id}}" class="kind-list-item-hd {{item.open ? 'kind-list-item-hd-show' : ''}}" bindtap="kindToggle">
      <view class="kind-list-text">{{item.name}}</view>
      <view class="page_add">
        <image class="add_image" src="https://6c69-littleprocedure-1301767640.tcb.qcloud.la/icon/add.png?sign=8a499268157751c4f184f5e43ad6b583&t=1590335242"  bindtap="addPre"></image>
      </view>
    </view>
    <view class="kind-list-item-bd {{item.open ? 'kind-list-item-bd-show' : ''}}">
      <view class="navigator-box {{item.open ? 'navigator-box-show' : ''}}">
        <block wx:for="{{item.pages}}" wx:for-item="page" wx:key="page.id">
          <view class="navigator" bindtap="confirmPrep" data-id="{{item.id}}" data-index='{{page.id}}'>
            <view class="navigator-text">{{page.name}}</view>
            <!-- icon -->
            <view class="navigator-image" wx:if="{{page.confirm == true}}">
              <image class="confirm_image" src="https://6c69-littleprocedure-1301767640.tcb.qcloud.la/icon/confirm.png?sign=a04d0349dbb154721e9feaf740ff9521&t=1590329836"></image>
            </view>
          </view>
        </block>

        <!-- 添加输入框 -->
        <view class="navigator" wx:if="{{ifShowInputbox == false}}">
          <input class="input" type="text" placeholder="请添加便签..."  bindinput="changeInputVal" placeholder-class="place-input" value="{{inputVal}}"></input>
          <button size="mini" type="primary" id="{{item.id}}" bindtap="addMsg">添加</button>
        </view>
      </view>
    </view>
  </view>
</block>
</view>


