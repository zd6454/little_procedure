<!--可切换菜单栏-->
    <scroll-view scroll-with-animation="true" class="menu_box" scroll-left="0">
    <view class="menu_body menu_body_cur{{menuIndex}}" style="width:calc（187.5rpx*{{menuList.length}});">
    <view class='menu_li' wx:for="{{menuList}}" data-type='{{index}}' bindtap='changeTitle'>{{item}}</view>
