<view class="search" style="position:fixed; top:65rpx;left:20rpx">
  <input placeholder="请输入要搜索的内容" bindconfirm="search" value="{{value}}" confirm-type="done" bindinput="inputBind"></input>
  <image src="../../icons/sousuo.png" bindtap='search' style="width:20rpx;height:45rpx"/>
</view>

<view class="detail_swiper">
    <swiper 
    autoplay="{{true}}"
    circular="{{true}}"
    indicator-dots="{{true}}"
    interval='2000'
    >
        <swiper-item 
        wx:for="{{pictures}}"
        wx:key="pid"
        bindtap="handlePreviewImage"
        data-url="{{item.src_big}}"
       >
            <image mode="widthFix"  src="{{item.src}}"/>
        </swiper-item>    
    </swiper>
</view>

<!-- 活动 -->
<view class="activity" style="padding-top:20rpx">
  <view class="activity_1" wx:for="{{activity}}">
  <navigator url="/pages/home/index" style=" display: flex;flex-direction: column;width:100%;height:100%;align-self: center;align-items: center;"> 
   <image style="width:140rpx;height:110rpx" src="../../images/wuda.jpg"></image>
   <text style="font-size:30rpx">活动</text>
    </navigator>
  </view >
</view>

<!-- 标签 -->
  <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange" >
     <block wx:if="{{tabs[0].isActive}}">
       <map
        style="width:100%;height:700rpx" subkey="SB4BZ-NURKK-NFMJ6-A63LK-MXYIE-SEFZI" markers="{{markers}}" bindmarkertap="markertap"   
        include-points="{{includepoints}}" 
        latitude="{{markers.latitude}}" longitude="{{markers.longitude}}"
       ></map>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">
       <navigator class="second_tab" 
            wx:for="{{secenList}}"
            wx:key="id"
            url="/pages/spot_detail/index?id={{item.id}}">
                <!-- 左侧 图片容器 -->
                <view class="goods_img_wrap">
                    <image mode="widthFix" src="http://image4.suning.cn/uimg/b2c/newcatentries/0070175200-000000000763892692_2_400x400.jpg" />
                </view>
                <!-- 右侧 商品容器 -->
                <view class="goods_info_wrap">
                    <view class="goods_name">{{item.title}}</view>
                    <view class="address">地点：{{item.address}}</view>
                    <view class="detail">
                      <view class="tel">电话：{{item.tel}}</view>
                      <view class="category">{{item.category}}</view>
                    </view>
                </view>
        </navigator>
    
    </block>
    <block wx:if="{{tabs[2].isActive}}">
        <navigator class="third_tab" 
            wx:for="{{foodList}}"
            wx:key="id"
            url="/pages/home/index?spot_id={{item.id}}">
                <!-- 左侧 图片容器 -->
                <view class="goods_img_wrap">
                    <image mode="widthFix" src="http://image4.suning.cn/uimg/b2c/newcatentries/0070175200-000000000763892692_2_400x400.jpg" />
                </view>
                <!-- 右侧 商品容器 -->
                <view class="goods_info_wrap">
                    <view class="goods_name">{{item.title}}</view>
                    <view class="address">地点：{{item.address}}</view>
                    <view class="detail">
                      <view class="tel">电话：{{item.tel}}</view>
                      <view class="category">{{item.category}}</view>
                    </view>
                </view>
        </navigator>
    </block>
  </Tabs>
