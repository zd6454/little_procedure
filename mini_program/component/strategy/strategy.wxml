           <image src="../../img/like.png" class="gethot" bindtap="handleIlike" data-id="{{item._id}}" data-likeamount="{{item.likeamount}}"></image>
           <text class="good" >{{item.likeamount}}</text>
          </view>
        </view>
       </view>
      
    </view>
  </view>
</view>