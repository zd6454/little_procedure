
<view class="list">
  <view class='list-half'>
    <navigator wx:for="{{list}}" wx:key="index" wx:if="{{index%2 == 0}}" class='card' url="/pages/spot_detail/index?id={{item.index}}">
      <image src="{{item.image}}" mode="scaleToFill" class="big_image"style="" ></image>
       <view class="array">
         {{item.user_text}}
       </view>
       <view class="head">
              <view class="head">
                <image class="image" src="{{item.user_image}}" ></image>
                 <text class="textset">{{item.user}}</text>
              </view>
              <view class="wrap">
                <image src="../../images/huangheluo.jpg" class="gethot"> </image>
                <text class="good">{{item.num}}</text>
              </view>
       </view>
      
    </navigator>
  </view>
  <view class='list-half'>
   <navigator wx:for="{{list}}" wx:key="index" wx:if="{{index%2 != 0}}" class='card' url="/pages/spot_detail/index?id={{item.index}}">
       <image src="{{item.image}}" mode="scaleToFill" style="width:346rpx;height:234rpx; border-radius: 20rpx;"></image>
       <view class="array">
       <text class="conduct">{{item.user_text}}</text>
       </view>
       <view class="head">
              <view class="head">
                <image class="image" src="{{item.user_image}}" ></image>
                 <text class="textset">{{item.user}}</text>
              </view>
            <view class="wrap">
                <image src="../../images/huangheluo.jpg" class="gethot"> </image>
                <text class="good">{{item.num}}</text>
              </view>
       </view>
      
    </navigator>
  </view>
</view>